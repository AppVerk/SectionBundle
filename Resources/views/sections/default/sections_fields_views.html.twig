{% if section.fields|length > 0 %}
    <div class="table-scrollable" style="margin:0 !important;">
        <table class="table table-hover table-light table-small-font">
            <thead>
            <tr>
                <th class="uppercase" width="4%">Type</th>
                <th class="uppercase" width="250">Name</th>
                <th class="uppercase">Value</th>
                <th class="uppercase" width="90">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for field in section.fields %}
                {% if section.translations.containsKey(langCode) == true %}
                    {% if field.settings != true %}
                    <tr>
                        <td>{{ field.type }}</td>
                        <td><strong>{{ field.translations[langCode].title|cubeRaw }}</strong> <small>[{{ field.name }}]</small></td>
                        <td>
                            {% if field.type == 'input' %}
                                {{ field.text }}
                            {% elseif field.type == 'txt' %}
                                {{ field.body|length > 160 ? field.body|slice(0, 160) ~ '...' : field.body  }}
                            {% elseif field.type == 'html' %}
                                {{ field.body|striptags|length > 160 ? field.body|striptags|slice(0, 160) ~ '...' : field.body  }}
                            {% elseif field.type == 'photo' %}
                                {% if field.photo %}<div class="thumbnail" style="display: inline-block; margin: 0;">
                                    <img src="{{ thumbnail(field.photo, 'field_list') }}" />
                                </div>{% endif %}
                            {% endif %}
                        </td>
                        <td>
                            {% if disabled is not defined or disabled != true %}
                                <a
                                    class="btn btn-outline btn-circle btn-sm green"
                                    data-toggle="modal"
                                    data-target="#ajax"
                                    href="{{ path('grid_field_edit', {'field': field.id, 'lang': langCode}) }}"
                                ><i class="icon-pencil"></i> Edit</a>
                            {% endif %}
                        </td>
                    </tr>
                    {% endif %}
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}
